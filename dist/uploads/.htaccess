# Zabezpečení uploads složky
<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

# Povolení přístupu ke známým typům souborů
<FilesMatch "\.(pdf|jpg|jpeg|png|gif|doc|docx|xls|xlsx|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Zakázání spouštění skriptů
Options -ExecCGI
AddHandler cgi-script .php .pl .py .jsp .asp .sh .cgi
